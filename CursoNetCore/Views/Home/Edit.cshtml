@model CursoNetCore.Models.Usuario

@{
    ViewData["Title"] = "Editar un nuevo registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
	<h3>Editar Usuario</h3>
</div>

<hr />
<div class="row">

    <div class="card border col-md-12">

		<div class="card-header">
			<h3><strong>Editar a un usuario</strong></h3>
        </div>
		<div class="card-body" >

            <form asp-action="Edit">

            <input type="hidden" value="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefeno" class="control-label"></label>
                <input asp-for="Telefeno" class="form-control" />
                <span asp-validation-for="Telefeno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enail" class="control-label"></label>
                <input asp-for="Enail" class="form-control" />
                <span asp-validation-for="Enail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
        </div>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

