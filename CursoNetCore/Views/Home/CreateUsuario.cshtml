@model CursoNetCore.Models.Usuario

@{
	ViewData["Title"] = "Crear nuevo usuario";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center">
	<h1 class="display-4">Crud Usuario</h1>
</div>

<hr />
<div class="row">
	<div class="card col-12">
		<div class="card-header">
			<h3><strong>Crear un nuevo Usuario</strong></h3>
		</div>
	<div class="card-body">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Nombre" class="control-label"></label>
				<input asp-for="Nombre" class="form-control" />
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Telefeno" class="control-label"></label>
				<input asp-for="Telefeno" class="form-control" />
				<span asp-validation-for="Telefeno" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Celular" class="control-label"></label>
				<input asp-for="Celular" class="form-control" />
				<span asp-validation-for="Celular" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Enail" class="control-label"></label>
				<input asp-for="Enail" class="form-control" />
				<span asp-validation-for="Enail" class="text-danger"></span>
			</div>
			<div class="form-group">
				<button type="submit" value="Create" class="btn btn-success"> <i class="fas fa-user"></i>  Crear Usuario</button>
			</div>
		</form>
	</div>
	</div>
</div>

<div>
	<a class="btn btn-success" asp-action="Index">Back to List</a>
</div>

